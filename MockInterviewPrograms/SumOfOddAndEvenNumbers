import java.util.Scanner;

public class SumOfOddAndEvenNumbers {
    public static void main(String[] args){
//        Scanner sc = new Scanner(System.in);
//        System.out.print("Enter the Input Array size : ");
//        int intArraySize = sc.nextInt();
//        System.out.print("Enter the Input Array values : ");
//        int[] intArrayValues = new int[intArraySize];
//        for(int i = 0; i<intArraySize; i++)
//            intArrayValues[i] = sc.nextInt();


        int[] inputArrayVal = {1,3,2,6,7};
        int sumOfOddNumbers = 0;
        int sumOfEvenNumbers = 0;

        for(int i = 0; i<inputArrayVal.length; i++) {
            if (inputArrayVal[i] % 2 == 0)
                sumOfEvenNumbers += inputArrayVal[i];
            else
                sumOfOddNumbers += inputArrayVal[i];
        }

        System.out.println("The sum of even numbers is - " + sumOfEvenNumbers);
        System.out.println("The sum of even numbers is - " + sumOfOddNumbers);
    }
}
